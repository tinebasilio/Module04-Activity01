<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App3.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Welcome to Xamarin.Forms!" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>

        <Label Text="List and Collection View" FontSize="24"/>

        <Button Text="Go to List View" Clicked="Activity1Clicked"/>
        <Button Text="Go to Text Cell" Clicked="Activity2Clicked"/>
        <Button Text="Go to Image Cell" Clicked="Activity3Clicked"/>
        <Button Text="Go to Switch Cell" Clicked="Activity4Clicked"/>
        <Button Text="Go to Entry Cell" Clicked="Activity5Clicked"/>




    </StackLayout>

</ContentPage>
